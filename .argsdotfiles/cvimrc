" to make this work in cVim extension:
" 1. :settings
" 2. paste this into 'cVimrc' text field:
"   let configpath = "/Users/argshook/.argsdotfiles/cvimrc"
"   set localconfig
"
" Note: configpath depends on machine, and you can't use ~ (tilde) because fuck you
"
" 3. click 'Save' on top right
" 4. :source

set linkanimations
set sortlinkhints
set noautofocus
set smoothscroll
let scrollstep = 100
let blacklists = ["http://devdocs.io/*","https://inbox.google.com/*","https://mail.google.com/*","http://vim-adventures.com/*"]
let hintcharacters = 'asdfghjkl'

getIP() -> {{
  httpRequest({url: 'http://api.ipify.org/?format=json', json: true},
              function(res) { Status.setMessage('IP: ' + res.ip); });
}}

site '*://*.reddit.com/*' {
  unmap j
  unmap k
  unmap x
  unmap [
  unmap ]
  unmap [[
  unmap ]]
  unmap g
  unmap n
  unmap a
  unmap z
  unmap 9
  unmap 0
}

site '*://*.github.com/*' {
  unmap t
  unmap w
}

