#!/usr/bin/env zsh

WORKSTATION=$1

case "$WORKSTATION" in
  laptop|l)
    xrandr \
      --output VIRTUAL1 --off \
      --output DP3 --off \
      --output eDP1 --off \
      --output DP1 --off \
      --output DP2 --off \
      --output HDMI3 --off \
      --output HDMI2 --off \
      --output HDMI1 --off \
      --output DP3-1 --off \
      --output DP3-3 --off \
      --output DP3-2 --off \
      --output eDP1 --mode 1920x1080
    ;;

  station|s)
    xrandr \
      --output VIRTUAL1 --off \
      --output DP3 --off \
      --output eDP1 --off \
      --output DP1 --off \
      --output DP2 --off \
      --output HDMI3 --off \
      --output HDMI2 --off \
      --output HDMI1 --off \
      --output DP3-2 --off \
      --output DP3-3 --primary --mode 1920x1200 --pos 0x720 --rotate normal
    xrandr \
      --output DP3-1 --mode 1920x1200 --pos 1920x0 --rotate left
    ;;

  home|h)
    xrandr \
      --output eDP1 --mode 1920x1080 --pos 320x1440 --rotate normal \
      --output HDMI1 --primary --mode 2560x1440 --pos 0x0 --rotate normal --output HDMI2 --off \
      --output DP1 --off \
      --output DP2 --off \
      --output DP3 --off \
      --output DP3-1 --off \
      --output DP3-2 --off \
      --output DP3-3 --off \
      --output HDMI3 --off \
      --output VIRTUAL1 --off
    ;;
  *)
    echo "Usage: $(basename $0) {laptop|l|station|s|home|h}"
esac
