# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

set $bg-color #101218
set $text-color #d1d4e0
set $text-secondary #fcc09e

set $base00 #657b83
set $base01 #586e75
set $base02 #073642
set $base03 #002b36
set $base04 #839496
set $base05 #93a1a1
set $base06 #eee8d5
set $base07 #fdf6e3
set $base08 #b58900
set $base09 #cb4b16
set $base0A #dc322f
set $base0B #d33682
set $base0C #6c71c4
set $base0D #268bd2
set $base0E #2aa198
set $base0F #859900

set $workspace-www www
set $workspace-terminal terminal
set $workspace-work work
set $workspace-music music
set $workspace-games games
set $workspace-chat chat

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:DejaVu Sans Mono 8


assign [class="Steam"] 5 $workspace-games

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# disable focusing windows with mouse hover
focus_follows_mouse no

# start a terminal
#bindsym $mod+Return exec terminology
# bindsym $mod+Return exec urxvt
bindsym $mod+Return exec kitty
bindsym $mod+c exec chromium

# bookmarks scratchpad
for_window [instance="kitty-bookmarks"] move to scratchpad
exec kitty --class "kitty-bookmarks"
bindsym $mod+o [instance="kitty-bookmarks"] scratchpad show resize set 900 200, move position center

# search scratchpad
for_window [instance="kitty-search"] move to scratchpad
exec kitty --class "kitty-search"
bindsym $mod+g [instance="kitty-search"] scratchpad show resize set 900 700, move position center

# notes scratchpad
for_window [instance="kitty-notes"] move to scratchpad
exec kitty --class "kitty-notes" -e "nvim"
bindsym $mod+p [instance="kitty-notes"] scratchpad show resize set 800 600, move position center

# quick edit scratchpad
for_window [instance="kitty-vim-everywhere"] move to scratchpad
exec kitty --class "kitty-vim-everywhere"
bindsym $mod+n [instance="kitty-vim-everywhere"] scratchpad show resize set 800 600, move position center

# quick edit scratchpad
for_window [instance="kitty-dropterminal"] move to scratchpad
exec kitty --class "kitty-dropterminal"
bindsym $mod+t [instance="kitty-dropterminal"] scratchpad show resize set 800 400, move position center

# change wallpaper
bindsym $mod+shift+w exec feh --bg-fill `find Pictures/wallpapers | shuf -n 1`

# kill focused window
bindsym $mod+Shift+q kill

# disable ctrl+q (still bug since '08 https://bugs.chromium.org/p/chromium/issues/detail?id=147)
bindsym Control+q exec /bin/true

# start program launcher
bindsym $mod+d exec ulauncher

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Ctrl+greater move container to output right
bindsym $mod+Ctrl+less move container to output left

# horizontal split
bindsym $mod+b split h
# vertical split
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+z focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# switch to workspace
bindsym $mod+1 workspace number 1 $workspace-www
bindsym $mod+2 workspace number 2 $workspace-terminal
bindsym $mod+3 workspace number 3 $workspace-work
bindsym $mod+4 workspace number 4 $workspace-music
bindsym $mod+5 workspace number 5 $workspace-games
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10 $workspace-chat

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1 $workspace-www
bindsym $mod+Shift+2 move container to workspace number 2 $workspace-terminal
bindsym $mod+Shift+3 move container to workspace number 3 $workspace-work
bindsym $mod+Shift+4 move container to workspace number 4 $workspace-music
bindsym $mod+Shift+5 move container to workspace number 5 $workspace-games
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10 $workspace-chat

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Surely sre?' -b 'Yes, exit i3' 'i3-msg exit'"

# Screenshot
# bindcode 107 exec shutter -s -p main -e
# bindcode Shift+107 exec shutter -f -p main -e
bindsym $mod+shift+p exec escrotum --select "~/Dropbox/Screenshots/%Y-%m-%d-%H%M%S_screenshot.png"

# resize window (you can also use the mouse for that)
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode
  bindsym $mod+h resize shrink width 10 px or 10 ppt
  bindsym $mod+j resize grow height 10 px or 10 ppt
  bindsym $mod+k resize shrink height 10 px or 10 ppt
  bindsym $mod+l resize grow width 11 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

gaps inner 5


# Audio controls
set $psst --no-startup-id
set $update && killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# Brightness controls
# available when using xf86-video-intel
#bindsym XF86KbdBrightnessDown exec xbacklight -dec 5
#bindsym XF86KbdBrightnessUp exec xbacklight -inc 10


# available when using light-git (install from AUR)
bindsym XF86KbdBrightnessDown exec light -U 2
bindsym XF86KbdBrightnessUp exec light -A 2

# toggle touchpad with F9
bindsym XF86TouchpadToggle exec ~/.argsdotfiles/toggle-touchpad.sh
bindsym $mod+m exec ~/.argsdotfiles/toggle-touchpad.sh

# Touchpad control
#XF86TouchpadToggle

# Screen lock key
bindsym $mod+shift+x exec ~/.config/i3lock/lock.sh

default_border none

# Window Colors
#                         border  background text    indicator
client.focused          $base02 $base01    $base07 $base07
client.focused_inactive $base02 $base02    $base04 $base0F
client.unfocused        $base02 $base02    $base01 $base0F
client.urgent           $base02 $base08    $base00 $base0F

# hide title bar
new_window none

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

# keyboard layouts
bindsym $mod+space exec ~/.config/i3/keyboard-layout-switcher.sh

exec_always compton --config ~/.argsdotfiles/compton.conf -b
exec_always ~/.config/i3/xautolock.sh
exec_always --no-startup-id blueman-applet
exec_always --no-startup-id mate-panel
exec_always --no-startup-id setup-display
exec_always --no-startup-id setup-display

bar {
  font pango: Roboto Regular 12
  tray_output None
  mode invisible
  colors {
    #                  border  background text
    focused_workspace  $base03 $base00    $base03
    active_workspace   $base03 $base03    $base03
    inactive_workspace $base03 $base03    $base00
    urgent_workspace   $base03 $base0F    $base03
  }
}


exec ~/.config/i3/keyboard-layout-switcher.sh
exec unclutter -idle 3
exec conky -c ~/.config/conky/conky.config
exec redshift -l 54.677039:25.274023 # lat:long for vilnius

# set display turn off timeout (in seconds)
exec xset s 1800

exec --no-startup-id i3-focus-last
bindsym $mod+bracketright [con_mark=_last] focus
