# requires ttf-font-awesome

general {
  colors = true
  interval = 3
}

order += "battery 0"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "disk /"
order += "wireless wlp2s0"
order += "volume master"
order += "tztime local"

battery 0 {
  format = "%status %percentage %remaining "
  format_down = "No battery"
  status_chr = "   CHR"
  status_bat = "   BAT"
  status_full = " ☻  FULL"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

tztime local {
  format = "   %Y-%m-%d   %H:%M:%S " # calendar and clock-o icons
}

cpu_usage {
  format = "   %usage " # tachometer icon
}

wireless wlp2s0 {
  format_up = "   %essid (%quality) " # wifi icon
  format_down = " W: down"
}

disk "/" {
  format = "   %free " # hdd icon
}

volume master {
  format = "   %volume " # music icon
  format_muted = "   %volume "
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

cpu_temperature 0 {
format = "   %degrees °C " # fire icon
  path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
}
